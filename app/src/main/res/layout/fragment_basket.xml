<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp"
    tools:context=".view.BasketFragment">

    <!-- Sepetteki ürünleri gösterecek RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/basketRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        tools:listitem="@layout/item_basket_row"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomSummaryLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Alt kısım: toplam tutar + siparişi tamamla -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomSummaryLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/divider"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/surface"
            android:padding="20dp"
            android:weightSum="2">

            <!-- Toplam fiyat -->
            <TextView
                android:id="@+id/totalPriceText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Toplam: ₺0,00"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:gravity="start"
                android:textStyle="bold" />

            <!-- Siparişi tamamla butonu -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/checkoutButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                app:iconSize="20dp"
                android:text="Siparişi Tamamla"
                android:textColor="@color/on_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@color/primary"
                app:cornerRadius="20dp"
                app:icon="@drawable/baseline_shopping_cart_checkout_24"
                app:iconGravity="textStart"
                app:iconTint="@color/on_primary"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
