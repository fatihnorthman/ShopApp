<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:id="@+id/itemBasketRecyclerRow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Ürün görseli -->
        <ImageView
            android:id="@+id/imageViewBasketProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_report_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Ürün adı -->
        <TextView
            android:id="@+id/textViewBasketProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Ürün Adı"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/imageViewBasketProduct"
            app:layout_constraintTop_toTopOf="@id/imageViewBasketProduct"
            app:layout_constraintEnd_toStartOf="@id/buttonRemoveItem" />

        <!-- Ürün fiyatı -->
        <TextView
            android:id="@+id/textViewBasketPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₺149.99"
            android:textColor="#2196F3"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/textViewBasketProductName"
            app:layout_constraintTop_toBottomOf="@id/textViewBasketProductName" />

        <!-- Adet bilgisi -->
        <TextView
            android:id="@+id/textViewQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adet: 2"
            android:textColor="#787878"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/textViewBasketProductName"
            app:layout_constraintTop_toBottomOf="@id/textViewBasketPrice" />

        <!-- Ürünü sepetten silme butonu -->
        <ImageButton
            android:id="@+id/buttonRemoveItem"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Ürünü sil"
            android:src="@drawable/baseline_delete_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/holo_red_dark" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
